{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": [
      "esnext.asynciterable"
    ],
    "disableSizeLimit": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"],
  "typeRoots": ["node_modules/@types", "@types"]
}
